{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": {
        "extends": "./tsconfig.json",
        "compilerOptions": {
          "types": ["jest"]
        },
        "include": ["lib", "tests"]
      }
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
      "quotes": ["warn", "single"],
      "no-console": "warn",
      "indent": ["error", "tab"]
    },
    "ignorePatterns": ["*.config.js"]
  }
  